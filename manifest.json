{
    "name": "ScratchBlocks2svg",
    "version": "0.1.4",
    "manifest_version": 2,
    "icons": {
         "16": "icon16.png",
         "32": "icon32.png",
		 "48": "icon48.png",
         "128": "icon128.png"
	},
    "permissions": [
        "activeTab"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
          "matches": ["*://*/*"],
          "js": ["contentscript.js"],
          "run_at": "document_end"
        }
    ],
    "description": "Export Scratch 3 blocks to SVG images.",
    "browser_action": {
        "default_icon": "icon32.png",
        "default_title": "export svg",
        "default_popup": "index.html"
    }
}